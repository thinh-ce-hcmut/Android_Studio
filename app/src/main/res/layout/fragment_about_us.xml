<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment"
    android:name ="com.example.demoiot.AboutUsFragment"
    android:orientation="vertical">

    <!-- Your activity content goes here -->
    <LinearLayout

        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:layout_weight = "10">
        <TextView

            android:layout_width="0dp"
            android:background="@drawable/ava"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"/>

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Thanh Liêm"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_weight="1"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:background="@drawable/thinh"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"/>

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Trường Thịnh"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">


        <TextView

            android:layout_width="0dp"
            android:background="@drawable/trieu"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"/>

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Xuân Triều"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:background="@drawable/bang"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"/>

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Trọng Bằng"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>





</LinearLayout>
